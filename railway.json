{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildEnvironment": "V2"
  },
  "deploy": {
    "startCommand": "npm run start:prod",
    "preDeployCommand": ["npx prisma migrate deploy"],
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}

